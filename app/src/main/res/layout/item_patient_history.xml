<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_style"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/serviceNamePatientHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:text="Βελονισμός"
        android:textColor="@color/black"

        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apointmentDatePatientHistory" />

    <TextView
        android:id="@+id/apointmentDatePatientHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:text="00/00/0000"
        android:textColor="@color/button_purple"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/calendarIconHistory"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apointmentTimePatientHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:text="15:00"
        android:textColor="@color/button_purple"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/apointmentDatePatientHistory"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apointmentDescriptionPatientHistory"
        android:layout_width="321dp"
        android:layout_height="46dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="10dp"
        android:text="Σχόλια: Πόνοι στο σβέρκο κα..."
        android:textColor="@color/button_grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/servicePrisePatientHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:text="40€"
        android:textColor="@color/button_purple"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <ImageView
        android:id="@+id/calendarIconHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calendar_icon_today" />




</androidx.constraintlayout.widget.ConstraintLayout>