<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_lime"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profilePatientConstraint">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileHeaderConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/button_purple">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImagePatient"
                android:layout_width="@dimen/_76sdp"
                android:layout_height="@dimen/_76sdp"
                android:src="@drawable/boy"
                app:civ_border_color="@color/background_lime"
                app:civ_border_width="2dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/editImgPatientProfile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="7dp"
                android:src="@drawable/baseline_add_a_photo_24"
                android:background="@drawable/bg_for_photo_picker"
                android:contentDescription="@string/add_photo"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@id/profileImagePatient"
                app:layout_constraintTop_toBottomOf="@id/profileImagePatient"
                app:layout_constraintEnd_toEndOf="@id/profileImagePatient"
                app:layout_constraintBottom_toBottomOf="@id/profileImagePatient"/>

            <TextView
                android:id="@+id/profileNamePatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""

                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileImagePatient" />
            <TextView
                android:id="@+id/profileUsernamePatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileNamePatient"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileInformationConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/profileHeaderConstraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/titleYourInformationPatientProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="10dp"
                android:background="#996750A4"
                android:text="@string/your_info"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/titleAmkaProfilePatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Amka"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/titleYourInformationPatientProfile"/>
            <TextView
                android:id="@+id/amkaOutputProfilePatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"

                app:layout_constraintStart_toEndOf="@+id/titleAmkaProfilePatient"
                app:layout_constraintTop_toTopOf="@id/titleAmkaProfilePatient"
                app:layout_constraintBottom_toBottomOf="@id/titleAmkaProfilePatient"/>

            <TextView
                android:id="@+id/titlePhonePatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Phone"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@+id/titleAmkaProfilePatient"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/phoneOutputPatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp"

                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/titlePhonePatientProfile"
                app:layout_constraintBottom_toBottomOf="@id/titlePhonePatientProfile"
                app:layout_constraintStart_toEndOf="@+id/titlePhonePatientProfile"
                />
            <TextView
                android:id="@+id/titleEmailPatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Email"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@+id/titlePhonePatientProfile"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/emailOutputPatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@id/titleEmailPatientProfile"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/titleCityPatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/City"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@+id/emailOutputPatientProfile"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/cityOutputPatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/titleCityPatientProfile"
                app:layout_constraintBottom_toBottomOf="@+id/titleCityPatientProfile"
                app:layout_constraintStart_toEndOf="@+id/titleCityPatientProfile"/>
            <TextView
                android:id="@+id/titleAdressPatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Address"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleCityPatientProfile"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/adressOutputPatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@+id/titleAdressPatientProfile"
                app:layout_constraintBottom_toBottomOf="@+id/titleAdressPatientProfile"
                app:layout_constraintStart_toEndOf="@+id/titleAdressPatientProfile"/>
            <TextView
                android:id="@+id/titlePostalCodePatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postal_code"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@+id/emailOutputPatientProfile"
                app:layout_constraintStart_toEndOf="@+id/cityOutputPatientProfile"/>
            <TextView
                android:id="@+id/postalCodePatientProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@+id/titlePostalCodePatientProfile"
                app:layout_constraintBottom_toBottomOf="@+id/titlePostalCodePatientProfile"
                app:layout_constraintStart_toEndOf="@+id/titlePostalCodePatientProfile"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>