<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profilePatientConstraint"
    android:background="@color/background_lime">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileHeaderConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/button_purple">

        <ImageView
            android:id="@+id/profileImagePatient"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/round_style"

            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/profileNamePatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Μαρια Δολεσιδου"

            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImagePatient" />
        <TextView
            android:id="@+id/profileUsernamePatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="maraki123"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileNamePatient"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileInformationConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profileHeaderConstraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleYourInformationPatientProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingStart="10dp"
            android:background="#996750A4"
            android:text="Τα στοιχεία σας:"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/titleAmkaProfilePatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMKA:"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/titleYourInformationPatientProfile"/>
        <TextView
            android:id="@+id/amkaOutputProfilePatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999999999999"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/titleAmkaProfilePatient"
            app:layout_constraintTop_toBottomOf="@+id/titleYourInformationPatientProfile"/>

        <TextView
            android:id="@+id/titlePhonePatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Κινητό:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/titleAmkaProfilePatient"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/phoneOutputPatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6900000000"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/amkaOutputProfilePatient"
            app:layout_constraintStart_toEndOf="@+id/titlePhonePatientProfile"
            />
        <TextView
            android:id="@+id/titleEmailPatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/titlePhonePatientProfile"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/emailOutputPatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="maraki123@gmail.com"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@id/phoneOutputPatientProfile"
            app:layout_constraintStart_toEndOf="@+id/titleEmailPatientProfile"
            />
        <TextView
            android:id="@+id/titleCityPatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Πόλη:"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/titleEmailPatientProfile"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/cityOutputPatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Θεσσαλονικη"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/emailOutputPatientProfile"
            app:layout_constraintStart_toEndOf="@+id/titleCityPatientProfile"/>
        <TextView
            android:id="@+id/titleAdressPatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Διεύθυνση:"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/titleCityPatientProfile"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/adressOutputPatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aγιου Δημητριου 5"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/cityOutputPatientProfile"
            app:layout_constraintStart_toEndOf="@+id/titleAdressPatientProfile"/>
        <TextView
            android:id="@+id/titlePostalCodePatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ταχ/Κωδ:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/emailOutputPatientProfile"
            app:layout_constraintStart_toEndOf="@+id/cityOutputPatientProfile"/>
        <TextView
            android:id="@+id/postalCodePatientProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56000"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/emailOutputPatientProfile"
            app:layout_constraintStart_toEndOf="@+id/titlePostalCodePatientProfile"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>